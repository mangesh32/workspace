package day_4;

import java.util.Scanner;

public class CountDown implements Runnable{
	int timer=1;
	@Override
	public void run() {
		Scanner in=new Scanner(System.in);
		for(int i=1;i<=5;i++){
			System.out.println(timer++);
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				System.out.println("timer stopped!!");
			}
		}
		in.close();
		
	}
	

}
