	public static Map<Aadhar,List<BankAccount>> readFromFile(String filename){
		Map<Aadhar,List<BankAccount>> ret=new HashMap<Aadhar, List<BankAccount>>();
		try(BufferedReader br=new BufferedReader(new FileReader(filename))) {
			
			String aadharNo;
			while((aadharNo=br.readLine())!=null){
				Aadhar a=new Aadhar(aadharNo);
				ret.put(a, new ArrayList<BankAccount>());				
			}
			
		} catch (FileNotFoundException e) {
			System.out.println(" No "+filename+" there...");
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		return ret;
		
	}
	public static void fetchAccountDetailsFromDB(Map<Aadhar,List<BankAccount>> data){
		try {
			Class.forName("com.mysql.jdbc.Driver");
			Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/aadharDB","root","root");
			PreparedStatement ps;
			ResultSet rs;
			
			for(Aadhar a:data.keySet()){

				ps=con.prepareStatement("select account,full_name,balance from details where aadhar=?");
				ps.setString(1, a.getNumber());
				rs=ps.executeQuery();
				String acc;
				String fullName;
				double balance;
				while(rs.next()){
					acc=rs.getString("account");
					fullName=rs.getString("full_name");
					balance=rs.getDouble("balance");						
					data.get(a).add(new BankAccount(fullName,acc,balance));					
				}
				
			}
			
			
		} catch (ClassNotFoundException e) {
			System.out.println("No Driver Found");
		} catch (SQLException e) {
			System.out.println(e);
		}
		
		
		
	}
	
}
