package day_4;

import java.util.Scanner;

public class MAIN {
	static Scanner in;

	public static void main(String[] args) {
		
		in=new Scanner(System.in);
		do{
			WordDropper wd=new WordDropper();
			WordInput wi=new WordInput();
			wd.run();
			wi.run();
			
			System.out.println(Word.generatedWord);
			
			
			wd.wait(5000);
			
			
		}while(in.next()!="*");
		
	}

}
