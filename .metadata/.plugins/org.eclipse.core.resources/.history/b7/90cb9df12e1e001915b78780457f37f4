package day_4;

import java.util.Scanner;

public class WordInput extends Thread{
	
	Scanner in=new Scanner(System.in);
	WordDropper wd;
	@Override
	public void run() {
		wd=new WordDropper();
		
		
		if(Word.typedWord.equals(Word.generatedWord)){
			Word.hitCount+=Word.typedWord.length();
			Word.generatedWordCount+=1;
		}
		
	}
	

}
