package day_2;

public class ShapeDemo {
	public static void main(String[] args) {
		
		Circle circle=new Circle(5);
		Ractangle ractangle=new Ractangle(4, 5);
		Triangle triangle=new Triangle(4, 4, 5);
		Sphere sphere=new Sphere(5);
		
	}
	
	public static void shapeManager(Shape s){
		
		if(s instanceof TwoDimentionalShape){
			System.out.println(s.getName());
			System.out.println(((TwoDimentionalShape) s).getPerimeter());
			System.out.println(((TwoDimentionalShape) s).getArea());
		}
		if(s instanceof ThreeDimentionalShape){
			System.out.println(s.getName());
			System.out.println(((ThreeDimentionalShape) s).getSurfaceArea());
			System.out.println(((ThreeDimentionalShape) s).getVolume());
		}
		
	}
	
	
}
