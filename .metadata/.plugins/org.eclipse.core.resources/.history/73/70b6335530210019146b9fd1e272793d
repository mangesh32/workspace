package day_4;

import java.util.Scanner;

public class WordInput extends Thread{
	
	Scanner in=new Scanner(System.in);
	WordDropper wd;
	@Override
	public void run() {
		wd=new WordDropper();
		CountDown timer=new CountDown();
		wd.start();
		timer.start();
		
		while(in.hasNext() && timer.isAlive()){
			Word.typedWord+=in.nextLine();
			System.out.println("store: "+Word.typedWord);
			if(Word.typedWord.equals(Word.generatedWord)){
				Word.hitCount+=Word.typedWord.length();
				Word.generatedWordCount+=1;
				timer.interrupt();
			}
		}		
		
		this.interrupt();
		
	}
	


}
